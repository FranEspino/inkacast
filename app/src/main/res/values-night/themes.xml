<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inkacast"  parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#CC6600</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLight</item>
        <item name="colorSecondaryVariant">@color/primaryLight</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">#CC6600</item>
        <item name="colorOnSurface">#7F3F00</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="searchViewStyle">@color/backgroundDark</item>
        <item name="searchHintIcon">@color/white</item>

        <item name="colorOutline">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/colorLogoDark</item>

    </style>
    <style name="Theme.Inkacast.Background" >
        <item name="android:background">@color/backgroundDark</item>
    </style>
    <style name="Theme.Inkacast.Text" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Inkacast.TextDefault" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Inkacast.Toolbar" >
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="Theme.Inkacast.SearchView" >
        <item name="android:background">@color/backgroundDark</item>
    </style>
    <style name="SwitchInkacast" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/swich_selector</item>
        <item name="trackTint">@color/grayDefault</item>
    </style>


</resources>