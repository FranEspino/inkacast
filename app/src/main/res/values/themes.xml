<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inkacast"  parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#E37200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grayDefault</item>
        <item name="colorSecondaryVariant">@color/primaryLight</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimarySurface">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Background button, icons,etc  -->
        <item name="colorOutline">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>



    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Login">
        <item name="android:colorControlActivated">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:textSize">13dp</item>
        <item name="android:labelTextSize">15dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>


    <style name="Theme.Inkacast.Background" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Inkacast.Text" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Inkacast.TextDefault" >
        <item name="android:textColor">@color/grayDefault</item>
    </style>

    <style name="Theme.Inkacast.Toolbar" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Inkacast.SearchView" >
        <item name="android:textColorHint">@color/black</item>
        <item name="android:queryHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchInkacast" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/swich_selector</item>
        <item name="trackTint">@color/grayDefault</item>
    </style>


    <style name="MaterialDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupElevation">20sp</item>
        <!--color when click in item  -->
    </style>



    <style name="Alert.Button.Positive" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>

    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#CA000000</item>
        <item name="sv_titleTextColor">@color/black</item>
        <item name="sv_buttonForegroundColor">@color/black</item>
        <item name="sv_buttonBackgroundColor">@color/black</item>
        <item name="sv_tintButtonColor">@color/white</item>
        <item name="sv_titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="sv_detailTextAppearance">@style/CustomDescriptionTextAppearance</item>

    </style>
    <style name="CustomTitleTextAppearance" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDescriptionTextAppearance" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>