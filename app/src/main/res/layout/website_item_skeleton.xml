<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/colorOnTertiary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_device_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="11dp"
            style="@style/Theme.Inkacast.Background"
            >
            <LinearLayout
                android:id="@+id/ll_device_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    android:backgroundTint="#4D4D4D"

                    >
                    <ImageView
                        android:id="@+id/iv_webpage"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    >
                    <TextView
                        android:id="@+id/tv_webpage_name"
                        android:layout_width="wrap_content"
                        android:width="250dp"
                        android:background="#4D4D4D"
                        android:layout_height="10dp"
                        style="@style/Theme.Inkacast.TextDefault"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsbold"
                        />
                    <TextView
                        android:id="@+id/tv_webpage_url"
                        android:layout_width="250dp"
                        android:layout_height="14dp"
                        android:maxLines="1"
                        android:layout_marginTop="8dp"
                        android:background="#4D4D4D"
                        android:fontFamily="@font/roboto_light"
                        style="@style/Theme.Inkacast.TextDefault"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>