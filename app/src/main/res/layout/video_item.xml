<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/colorOnTertiary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_device_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="11dp"
            style="@style/Theme.Inkacast.Background"
            >
            <LinearLayout
                android:id="@+id/ll_device_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_webpage"
                        android:layout_width="70sp"
                        android:background="?attr/colorOnTertiary"
                        android:layout_height="70sp"
                        android:src="@drawable/video"
                        android:scaleType="fitCenter"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    >
                    <TextView
                        android:id="@+id/tv_video_name"
                        android:layout_width="wrap_content"
                        android:width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre de lista 1"
                        style="@style/Theme.Inkacast.TextDefault"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsmedium"
                        />
                    <TextView
                        android:id="@+id/tv_video_uri"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        android:text="Última actualización 12/02"
                        android:fontFamily="@font/roboto_light"
                        style="@style/Theme.Inkacast.TextDefault"
                        />
                    <TextView
                        android:id="@+id/tv_video_typefile"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="m3u8"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold"
                        style="@style/Theme.Inkacast.TextDefault"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    >
                    <ImageButton
                        android:id="@+id/btn_video_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/click_options"
                        android:src="@drawable/ic_options"
                        android:tint="?attr/colorOutline"
                        android:padding="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseAppTint"
                        android:contentDescription="@string/setting_description" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>